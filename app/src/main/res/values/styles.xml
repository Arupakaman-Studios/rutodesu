<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- View Click Style-->
    <style name="Theme.Rutodesu.ClickableWithinBorder">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Rutodesu.ClickableBorderLess">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Button Styles -->

    <style name="Theme.Rutodesu.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">?colorTextBtn</item>
        <item name="backgroundTint">?colorButtonTint</item>
    </style>

    <style name="Theme.Rutodesu.MaterialButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">?colorTextDark</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ShapeAppearanceOverlay.Art.Corner" parent="">
        <item name="cornerSize">10dp</item>
    </style>


    <style name="Theme.Rutodesu.AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">?colorPrimary</item>
        <item name="android:textColor">?colorTextMain</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Alert.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Alert.BodyTextStyle</item>
        <item name="shapeAppearanceOverlay">@style/Alert.ShapeAppearanceOverlay.Dialog.Rounded</item>
    </style>

    <style name="Alert.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="Alert.BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--<item name="android:fillColor">@color/colorTransparent</item>-->
        <item name="android:textColor">?colorTextMain</item>
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Alert.ShapeAppearanceOverlay.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>